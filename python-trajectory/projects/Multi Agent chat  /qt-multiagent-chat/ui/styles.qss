/* === Base / Dark Theme === */
* { font-family: -apple-system, "SF Pro Text", Inter, Roboto, Arial; }
QMainWindow, QWidget { background: #1a1a1a; color: #e6e6e6; }
QSplitter::handle { background:#2a2a2a; width:6px; }
QScrollBar:vertical { background:#1e1e1e; width:10px; }
QScrollBar::handle:vertical { background:#3a3a3a; border-radius:5px; }

/* === Header === */
#title { font-size: 16px; font-weight: 600; color:#eaeaea; }
QPushButton#iconbtn {
  min-width:34px; max-width:34px; height:34px; border-radius:8px;
  background:#232323; border:1px solid #2f2f2f; color:#cfcfcf;
}
QPushButton#iconbtn:hover { background:#2a2a2a; }
QPushButton#rolebtn {
  padding:6px 12px; border-radius:8px; background:#232323; color:#ddd;
  border:1px solid #2f2f2f;
}
QPushButton#rolebtn:hover { background:#2b2b2b; }

/* === Sidebar (tree) === */
QTreeWidget, QListWidget {
  background:#161616; border:1px solid #2a2a2a; border-radius:10px;
}
QTreeView::item, QListWidget::item { padding:8px 10px; }
QTreeView::item:selected, QListWidget::item:selected { background:#2a2f3a; }

/* === Tabs / Preview === */
QTabWidget::pane { border:1px solid #2a2a2a; border-radius:10px; background:#121212; }
QTabBar::tab {
  padding:6px 12px; margin:4px; border-radius:8px; background:#1d1d1d; color:#cfcfcf;
  border:1px solid #2a2a2a;
}
QTabBar::tab:selected { background:#2a2f3a; color:#eaeaea; }

/* === Inputs & Buttons === */
QLineEdit, QTextEdit {
  background:#121212; color:#e6e6e6; border:1px solid #2a2a2a; border-radius:10px; padding:8px 10px;
}
QLineEdit:focus, QTextEdit:focus { border-color:#007acc; }
QPushButton#sendbtn {
  padding:10px 16px; border-radius:10px; color:#fff; background:#007acc; border:none;
}
QPushButton#sendbtn:hover { background:#1188d1; }

/* === Message “Cards” === */
.MessageCard {
  background:#161616; border:1px solid #2a2a2a; border-radius:12px; padding:10px 12px;
}
.MessageCard[user="true"] { border-color:#2f6fed; background:#0f1a2b; }
.MessageTime { color:#9aa0a6; font-size:11px; margin-top:4px; }
